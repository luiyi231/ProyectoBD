<Window x:Class="Capa_Presentacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Gestión de Estudiantes" Height="740" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Estilo para botón hamburguesa -->
        <Style x:Key="HamburgerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="15,10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ECF0F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para elementos del menú -->
        <Style x:Key="MenuItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Margin="{TemplateBinding Margin}">
                            <StackPanel Orientation="Horizontal" 
                                      Margin="{TemplateBinding Padding}">
                                <TextBlock Text="{TemplateBinding Tag}" 
                                         FontFamily="Segoe MDL2 Assets" 
                                         FontSize="16" 
                                         VerticalAlignment="Center" 
                                         Margin="0,0,15,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Animaciones -->
        <Storyboard x:Key="SlideInMenu">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="-250" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="SlideOutMenu">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="0" To="-250" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" 
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Botón hamburguesa -->
                <Button x:Name="BtnMenu" 
                        Grid.Column="0"
                        Style="{StaticResource HamburgerButtonStyle}"
                        Content="☰" 
                        Click="BtnMenu_Click"
                        Margin="20,0,0,0"/>

                <!-- Título -->
                <StackPanel Grid.Column="1" 
                          Orientation="Horizontal" 
                          VerticalAlignment="Center" 
                          Margin="20,0">
                    <TextBlock Text="📚" 
                             FontSize="24" 
                             VerticalAlignment="Center" 
                             Margin="0,0,10,0"/>
                    <TextBlock Text="Sistema de Gestión de Estudiantes" 
                             FontSize="20" 
                             FontWeight="SemiBold" 
                             Foreground="#2C3E50" 
                             VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <Grid Grid.Row="1">
            <!-- Overlay para cerrar menú -->
            <Border x:Name="Overlay" 
                    Background="Black" 
                    Opacity="0" 
                    Visibility="Collapsed"
                    MouseLeftButtonDown="Overlay_Click"/>

            <!-- Contenido principal -->
            <ContentControl x:Name="Contenido" 
                          Background="#F8F9FA"
                          Margin="0"/>

            <!-- Menú lateral -->
            <Border x:Name="SideMenu" 
                    Width="250" 
                    HorizontalAlignment="Left" 
                    Background="#2C3E50"
                    Visibility="Collapsed"
                    RenderTransformOrigin="0,0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                    Direction="0" 
                                    ShadowDepth="5" 
                                    BlurRadius="20" 
                                    Opacity="0.3"/>
                </Border.Effect>
                <Border.RenderTransform>
                    <TranslateTransform X="-250"/>
                </Border.RenderTransform>

                <StackPanel Margin="0,20">
                    <!-- Header del menú -->
                    <Border Background="#34495E" 
                            Margin="10,0,10,20" 
                            CornerRadius="8" 
                            Padding="20,15">
                        <StackPanel>
                            <TextBlock Text="👨‍🎓" 
                                     FontSize="24" 
                                     HorizontalAlignment="Center" 
                                     Margin="0,0,0,10"/>
                            <TextBlock Text="Panel de Control" 
                                     FontSize="16" 
                                     FontWeight="SemiBold" 
                                     Foreground="White" 
                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="Gestión Académica" 
                                     FontSize="12" 
                                     Foreground="#BDC3C7" 
                                     HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Elementos del menú -->
                    <Button Content="Inscripción" 
                            Tag="" 
                            Style="{StaticResource MenuItemStyle}"
                            Click="BtnInscripcion_Click"
                            Margin="10,5"/>

                    <Button Content="Reporte de Materias" 
                            Tag="" 
                            Style="{StaticResource MenuItemStyle}"
                            Click="BtnReporteMaterias_Click"
                            Margin="10,5"/>

                    <Button Content="Reporte de Asistencia" 
                            Tag="" 
                            Style="{StaticResource MenuItemStyle}"
                            Click="BtnReporteAsistencia_Click"
                            Margin="10,5"/>

                    <Button Content="Notas del Estudiante" 
                            Tag="" 
                            Style="{StaticResource MenuItemStyle}"
                            Click="BtnReporteNotase_Click"
                            Margin="10,5"/>

                    <Button Content="Estudiante Boletin" 
                            Tag="" 
                            Style="{StaticResource MenuItemStyle}"
                            Click="BtnReporteNotasEstudiante_Click"
                            Margin="10,5"/>
                    


                    <!-- Separador -->
                    <Separator Background="#34495E" 
                             Margin="20,20" 
                             Height="1"/>

                    <!-- Información adicional -->
                    <Border Background="#1ABC9C" 
                            Margin="10,10" 
                            CornerRadius="6" 
                            Padding="15,10">
                        <StackPanel>
                            <TextBlock Text="✨ Tip del día" 
                                     FontSize="12" 
                                     FontWeight="Bold" 
                                     Foreground="White"/>
                            <TextBlock Text="Usa Ctrl+M para abrir/cerrar el menú rápidamente" 
                                     FontSize="11" 
                                     Foreground="White" 
                                     TextWrapping="Wrap" 
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>