<Window x:Class="Capa_Presentacion.ReporteAsistencia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capa_Presentacion"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Reporte de Asistencias" Height="600" Width="900">

    <Window.Resources>
        <!-- Estilos para botones -->
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2E6DA4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botón de generar reporte -->
        <Style TargetType="Button" x:Key="ReportButton" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#5CB85C"/>
        </Style>

        <!-- Estilo para botón de imprimir -->
        <Style TargetType="Button" x:Key="PrintButton" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF9800"/>
        </Style>

        <!-- Estilo para ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="200"/>
        </Style>

        <!-- Estilo para DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <!-- Estilo para headers del DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="8" Margin="15" 
            BorderBrush="#DDDDDD" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Encabezado principal -->
            <Border Grid.Row="0" Background="#4A90E2" CornerRadius="5" Padding="15,10" Margin="0,0,0,20">
                <TextBlock Text="📊 Reporte de Asistencias por Materia" 
                           Foreground="White" FontSize="18" FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Filtros -->
            <Border Grid.Row="1" Background="#F8F9FA" 
                    BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="5" 
                    Padding="20" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Primera fila de filtros -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                        <TextBlock Text="Carrera:" FontWeight="SemiBold" 
                                   Foreground="#495057" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cbCarrera" DisplayMemberPath="NombreCarrera" 
                                  SelectedValuePath="ID_Carrera" Height="32"
                                  SelectionChanged="cbCarrera_SelectionChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,15,15">
                        <TextBlock Text="Materia:" FontWeight="SemiBold" 
                                   Foreground="#495057" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cbMateria" DisplayMemberPath="NombreMateria" 
                                  SelectedValuePath="ID_Materia" Height="32"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                        <TextBlock Text="Gestión:" FontWeight="SemiBold" 
                                   Foreground="#495057" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cbGestion" DisplayMemberPath="Gestion" 
                                  SelectedValuePath="codGestion" Height="32"/>
                    </StackPanel>

                    <!-- Segunda fila - Botones -->
                    <StackPanel Grid.Row="1" Grid.ColumnSpan="3" 
                                Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="btnGenerar" Content="📋 Generar Reporte" 
                                Width="150" Height="35" Click="btnGenerar_Click"
                                Style="{StaticResource ReportButton}"/>
                        <Button x:Name="btnImprimir" Content="🖨️ Imprimir" 
                                Width="120" Height="35" Click="btnImprimir_Click"
                                Style="{StaticResource PrintButton}" IsEnabled="False"/>
                        <Button x:Name="btnLimpiar" Content="🧹 Limpiar" 
                                Width="100" Height="35" Click="btnLimpiar_Click"
                                Style="{StaticResource ModernButton}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Información del reporte -->
            <Border Grid.Row="2" Background="#E8F5E8" 
                    BorderBrush="#C3E6C3" BorderThickness="1" CornerRadius="5" 
                    Padding="15,10" Margin="0,0,0,15" MinHeight="60">
                <StackPanel>
                    <TextBlock x:Name="lblInfoReporte" FontWeight="Bold" 
                               Foreground="#2E7D32" VerticalAlignment="Center"
                               Text="Seleccione carrera, materia y gestión para generar el reporte"/>
                    <TextBlock x:Name="lblTotalEstudiantes" FontWeight="SemiBold" 
                               Foreground="#1B5E20" VerticalAlignment="Center"
                               Margin="0,5,0,0"/>
                    <TextBlock x:Name="lblPromedioAsistencia" FontWeight="SemiBold" 
                               Foreground="#1B5E20" VerticalAlignment="Center"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <!-- DataGrid con el reporte de asistencias -->
            <Border Grid.Row="3" BorderBrush="#DDDDDD" BorderThickness="1" 
                    CornerRadius="5" Background="White" Margin="0,0,0,15">
                <DataGrid x:Name="dgReporte" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Estudiante" Binding="{Binding Estudiante}" Width="200" MinWidth="150"/>
                        <DataGridTextColumn Header="CI" Binding="{Binding CI}" Width="100" MinWidth="80"/>
                        <DataGridTextColumn Header="RU" Binding="{Binding RU}" Width="80" MinWidth="60"/>
                        <DataGridTextColumn Header="Grupo" Binding="{Binding Grupo}" Width="70" MinWidth="50"/>
                        <DataGridTextColumn Header="Docente" Binding="{Binding Docente}" Width="180" MinWidth="120"/>
                        <DataGridTextColumn Header="Total Clases" Binding="{Binding TotalClases}" Width="90" MinWidth="70"/>
                        <DataGridTextColumn Header="Asistidas" Binding="{Binding ClasesAsistidas}" Width="80" MinWidth="60"/>
                        <DataGridTextColumn Header="Faltadas" Binding="{Binding ClasesFaltadas}" Width="80" MinWidth="60"/>

                        <!-- Porcentaje con colores según valor (sin converter) -->
                        <DataGridTemplateColumn Header="% Asistencia" Width="100" MinWidth="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding PorcentajeAsistencia, StringFormat={}{0:F2}%}" Padding="4" TextAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PorcentajeAsistencia}" Value="0">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                        <Setter Property="Foreground" Value="#C62828"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PorcentajeAsistencia}">
                                                        <DataTrigger.Value>
                                                            <sys:Double>70</sys:Double>
                                                        </DataTrigger.Value>
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                        <Setter Property="Foreground" Value="#C62828"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PorcentajeAsistencia}">
                                                        <DataTrigger.Value>
                                                            <sys:Double>85</sys:Double>
                                                        </DataTrigger.Value>
                                                        <Setter Property="Background" Value="#FFF8E1"/>
                                                        <Setter Property="Foreground" Value="#F57F17"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PorcentajeAsistencia}">
                                                        <DataTrigger.Value>
                                                            <sys:Double>100</sys:Double>
                                                        </DataTrigger.Value>
                                                        <Setter Property="Background" Value="#E8F5E8"/>
                                                        <Setter Property="Foreground" Value="#2E7D32"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Pie de página -->
            <Border Grid.Row="4" Background="#F8F9FA" 
                    BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="5" 
                    Padding="15,10">
                <Grid>
                    <TextBlock Text="💡 Tip: El % de asistencia se calcula en base a las clases registradas en el sistema" 
                               Foreground="#6C757D" FontStyle="Italic"
                               HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock x:Name="lblFechaReporte" 
                               Foreground="#6C757D" FontSize="10"
                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
